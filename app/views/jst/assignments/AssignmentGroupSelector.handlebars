<label for="{{basePrefix}}_group_id" class="control-label">
  {{#t "assignment_group"}}Assignment Group{{/t}}
</label>
<div class="controls">
  <select id="{{basePrefix}}_group_id"
    name="{{#if nested}}{{basePrefix}}[assignment_group_id]{{else}}assignment_group_id{{/if}}"
    {{disabledIfIncludes frozenAttributes "assignment_group_id"}}>
    {{#each assignmentGroups}}
      <option value="{{id}}" {{selectedIf ../assignmentGroupId this.id}}>
        {{name}}
      </option>
    {{/each}}
    <option value="new">
      [ {{#t "assignment_group_options.new_group"}}New Group{{/t}} ]
    </option>
  </select>
</div>
