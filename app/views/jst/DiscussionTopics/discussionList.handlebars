<div class="ig-header">
  <h2 class="ig-header-title element_toggler"
     aria-controls="{{listID}}"
     aria-expanded="true"
     aria-label="{{title}} {{toggleMessage}}"
     role="button">
    <i class="icon-mini-arrow-down"></i>
    {{title}}
  </h2>

  {{#if orderedBy}}
    <span class="pull-right title-help">
        {{orderedBy}}
        <select class="ordered_by">
            <option value="dateComparator">{{recentActivity}}</option>
            <option value="dueDateComparator">{{dueDate}}</option>
        </select>
    </span>
  {{/if}}
</div>

<div id="{{listID}}">
  <ul class="collectionViewItems ig-list">
  </ul>

<div class="no-content discussion">
  {{#if pinned}}
    <b>{{#t "no_pinned_discussions"}}You currently have no pinned discussions{{/t}}</b>
    <p>{{#t "pinned_instructions"}}Drag a discussion here to pin it to the top of students' discussion page.{{/t}}</p>
  {{else}}
    {{#t "there_are_no_discussions_show"}}There are no discussions to show.{{/t}}
  {{/if}}
</div>

  {{#if showSpinner}}
    <div class="loader"></div>
  {{/if}}
</div>
